<!DOCTYPE html>
<html>
  <head>
    <title>Fotobook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'login_signup' %>
  </head>

  <body>
   <% if user_signed_in? %>
  <nav class="navbar navbar-expand-sm navbar-light bg-primary py-0">
        <a class="navbar-brand ml-5 text-white font-weight-bold" href="#">Fotobook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse show" id="navbarSupportedContent" style="">
            <form class="form-inline my-2 my-lg-0 w-100">
                <input class="form-control mr-sm-2 h-25 w-50" type="text" placeholder="Search photo/album"
                    aria-label="Search">
            </form>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <div class="input-group w-25 h-25 userNavBar">
                        <%= link_to me_path,:class=>"link" do%>
                            <%= image_tag 'default.png',alt:'default',class:"py-0  userava" %>
                            <span class="align-self-center mx-2 text-white"><%="#{current_user.first_name} #{current_user.last_name}"%></span>
                    </div>
                        <%end%>
                        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'text-white logbtn text-decoration-none' %>
                </li>
            </ul>

        </div>
    </nav>
    <div class="container body">
        <div class="row">
            <div class="col-lg-1 col-12">
                <ul class="nav nav-pills flex-column">
                    <% if current_page?(discover_path)%>
                        <li class="nav-item">
                            <%= link_to 'Feeds', root_path,method: :get,class:"nav-link " %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'Discover', discover_path,method: :get,class:"nav-link active" %>
                        </li>
                    <%else %>
                        <li class="nav-item">
                            <%= link_to 'Feeds', root_path,method: :get,class:"nav-link active" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'Discover', discover_path,method: :get,class:"nav-link" %>
                        </li>
                    <%end%>

                </ul>
            </div>
<% end %>
             <%= yield %>
</div>


  </body>


</html>
