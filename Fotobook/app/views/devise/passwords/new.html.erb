<div class="cover">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },:html =>{class:"w-25 log text-white my-lg-2"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field py-2 px-2">
    <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>

          <div class="actions text-center mt-3">
      <%= f.submit "#{t '.send_instructions'}",class:"btn btn-primary btn-md mb-3 logbtn2" %>
    </div>
  </div>


  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>
