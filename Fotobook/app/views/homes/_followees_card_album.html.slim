- current_user.followees_albums.each do |post|
	- if post.sharing_mode
		.col-12.col-lg-6
			.card
				.card-body
					.container
						.row
							.col-lg-6.col-12.py-0.img data-id="#{post.id}" data-param="#{post.user_id}"
								= render partial: 'users/thumbnail',locals:{link: post.photos[-1].attached_image.url , mode:"album"}
							.col-lg-6.col-12.content
								.userInfo
									= link_to root_path do
										= image_tag post.user.avatar.url,alt:"Card image",class:"card-img-top img-fluid userava rounded-circle"
										span.align-self-center.ml-1.text-black.font-weight-bolder
											= "#{post.user.first_name} #{post.user.last_name}"
								.row.row-text
									h5.card-title = post.title
									p = post.description
								.row.px-2.album data-id="#{post.id}" data-param="#{current_user.id}"
									hr/
									- if post.likes.include?(current_user.id)
										.heart-animation.d-inline-block.bot-element.liked
									- else
										.heart-animation.d-inline-block.bot-element
									span.likesspan.bot-element-text = t(:likes, count: post.likes.size)
									span.date = local_time(post.created_at)