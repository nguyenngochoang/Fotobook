.col-lg-10.col-12.us.mid.edit
  .edit-title
    h5 Edit Album
    hr
  .edit-center

    = form_with model:@current_album,url:album_path(@current_album),id:"newalbum",remote:true do |album|
      .row
        .col-6.container-fluid
          .row
            = album.label :name
            = album.text_field :name,class:'form-control edit-field',autocomplete:'off',placeholder:'Album Name',value: @current_album.name
          .row
            .col-sm-12
              span.edit-error.font-weight-bolder
          .row
            = album.label :sharing_mode
            = album.select :sharing_mode, [['Public',1 ],['Private',0]],{include_blank: false} ,{class: "form-control"}
          .row
            .col-sm-12
              span.edit-error.font-weight-bolder
          .row.mt-4
            .form-group.photo-files
              .col-12.image-uploader
                .photo-upload-preview
                  label#add-symbol +
                  .dashes.text-center
                  = album.file_field :attached_image,id:"uploadphoto-btn", class:"invisible",multiple:true
                  span#cancel-symbol.invisible.font-weight-bolder x
        .col-6.container-fluid
          .col-sm-12
            = album.label :description
            = album.text_area :description,placeholder:'album Description',class:'form-control',rows:'7',value: @current_album.description
          .row
            .col-sm-12
              span.edit-error.font-weight-bolder
      = render 'current_album_photo.html.slim', current_album: @current_album
      .row.edit.mt-4
        .col-auto.pr-0
          = album.submit 'Save', id:"album-submit",class:"btn btn-success"
        .col-auto
          = link_to 'Delete',album_path(@current_album),method: :delete,data: { confirm: 'Are you sure?'}, id:"album-delete",class:"btn btn-danger"

