<%if mode=="photo"%>
  <a href="#" class="us addPA-btn font-weight-bolder photo">Add Photo</a>
  <%if user.photos.any? %>
      <div class="row us imgrow mt-5  us gocenter container-fluid photo">
        <%for j in (0...get_all_photos(user).count)%>
            <%@current_photo=@arr[j]%>
            <div data-link="<%=@current_photo.attached_image%>", class="card h-100 us usercard mr-5 thumbnail">
              <%= image_tag @current_photo.attached_image,alt:"Card image cap",class:"us card-img-top img-fluid rounded"%>
              <% if @current_photo.sharing_mode %>
                  <div class="us lockdiv us rounded-circle text-center d-none ">
                    <%= image_tag 'profile/lock.png',alt:"lock",class:"us lock" %>
                  </div>
              <% else %>
                  <div class="us lockdiv us rounded-circle text-center ">
                    <%= image_tag 'profile/lock.png',alt:"lock",class:"us lock" %>
                  </div>
              <% end %>

              <a href="#" class="us paEdit">Edit</a>
              <div class="us card-body text-center"><%=@current_photo.description%></div>
              <div class="us title text-center d-none"><%=@current_photo.title%></div>
            </div>

        <%end%>
      </div>
  <%else%>
    <div class="text-center us-nophoto text-black-50">
        <p>You don't have any Photos. Upload one ?</p>
    </div>
  <%end%>
<% elsif mode=="album" %>
  <a href="#" class="us addPA-btn font-weight-bolder ab">Add Album</a>
  <%if user.albums.any?%>
    <div class="row us imgrow mt-5  gocenter container-fluid d-none ab">
        <%for j in (0...get_albums_count)%>
            <div class="card h-100 us usercard mr-5 ">
              <% @current_album=get_current_album(j)%>
              <div id="<%=@current_album.id%>", class="us thumbnail">
                <%= image_tag @current_album.photos[-1].attached_image,alt:"Card image cap",class:"us card-img-top img-fluid  rounded firstimg" %>
                <%= image_tag @current_album.photos[-1].attached_image,alt:"Card image cap",class:"us card-img-top img-fluid  rounded secondimg" %>
                <%= image_tag @current_album.photos[-1].attached_image,alt:"Card image cap",class:"us card-img-top img-fluid  rounded thirdimg" %>
                <div class="us rounded-circle photonums text-center"><%="#{@current_album.photos.count} Photos"%></div>
              </div>
              <% if @current_album.sharing_mode %>
                  <div class="us lockdiv us rounded-circle text-center d-none ">
                    <%= image_tag 'profile/lock.png',alt:"lock",class:"us lock" %>
                  </div>
              <% else %>
                  <div class="us lockdiv us rounded-circle text-center ">
                    <%= image_tag 'profile/lock.png',alt:"lock",class:"us lock" %>
                  </div>
              <% end %>
                <div class="us lockdiv us rounded-circle text-center d-none">
                  <%= image_tag 'profile/lock.png',alt:"lock",class:"us lock" %>
                </div>
              <a href="#" class="us paEdit">Edit</a>
              <div class="us card-body text-center"> <%= @current_album.name%> </div>
            </div>

        <%end%>
      </div>
